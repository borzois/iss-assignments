<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.GridPane?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.teledon.controller.LoginController">
    <GridPane alignment="CENTER" hgap="20.0" vgap="10.0">
        <padding>
            <Insets top="20.0" right="20.0" left="20.0" bottom="20.0"/>
        </padding>

        <Label text="e-mail" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="password" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Button onAction="#handleRegister"
                GridPane.rowIndex="2"
                GridPane.columnIndex="0"
                GridPane.columnSpan="2"
                GridPane.hgrow="ALWAYS"
                maxWidth="Infinity">Register</Button>
        <Button onAction="#handleLogin"
                GridPane.rowIndex="3"
                GridPane.columnIndex="0"
                GridPane.columnSpan="2"
                GridPane.hgrow="ALWAYS"
                maxWidth="Infinity">Log in</Button>
    </GridPane>
</AnchorPane>

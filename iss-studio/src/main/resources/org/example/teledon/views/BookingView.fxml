<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.ListView?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.teledon.controller.BookingController">
    <GridPane alignment="CENTER" hgap="20.0" vgap="10.0">
        <padding>
            <Insets top="20.0" right="20.0" left="20.0" bottom="20.0"/>
        </padding>

        <ListView fx:id="bookingListView"
                  GridPane.rowIndex="0"
                  GridPane.columnIndex="0"
                  GridPane.columnSpan="1"
                  GridPane.rowSpan="3"
                  maxHeight="260.0"/>

        <Button onAction="#handleModify"
                GridPane.rowIndex="0"
                GridPane.columnIndex="1"
                GridPane.columnSpan="1"
                GridPane.hgrow="ALWAYS"
                maxWidth="Infinity">Modify booking</Button>
        <Button onAction="#handleCancel"
                GridPane.rowIndex="1"
                GridPane.columnIndex="1"
                GridPane.columnSpan="1"
                GridPane.hgrow="ALWAYS"
                maxWidth="Infinity">Cancel booking</Button>
    </GridPane>
</AnchorPane>
